<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/darker_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOD GENIE WELCOMES YOU!"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell Genie what to do:"
            android:gravity="center_horizontal"/>
        </LinearLayout>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/welcome_make_my_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/result_palces_border"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="MAKE MY WISH"
            android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/welcome_make_decide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/result_palces_border"
        android:visibility="gone"
        android:animateLayoutChanges="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SUGGEST FOR ME"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcome_make_visited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/result_palces_border"
        android:visibility="gone"
        android:animateLayoutChanges="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="SHOW MY VISITED PLACES"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>