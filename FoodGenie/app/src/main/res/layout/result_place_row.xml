<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_place_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/result_general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/result_place_add_to_faves"
            android:padding="5dp">
            <TextView
                android:id="@+id/result_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Name"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="8dp"/>
            <TextView
                android:id="@+id/result_place_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_place_name"
                android:text="Rating"
                style="@style/TextColorSubtext"
                android:paddingLeft="8dp"/>
            <TextView
                android:id="@+id/result_place_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/result_place_rating"
                android:layout_alignBaseline="@+id/result_place_rating"
                android:text="Price"
                style="@style/TextColorSubtext"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/result_place_show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result_place_rating"
                android:textColor="@android:color/holo_blue_dark"
                android:text="see more"
                android:paddingLeft="8dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/result_place_add_to_faves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/result_place_checkbox"
            android:text="the one"
            android:layout_centerVertical="true"/>
        <CheckBox
            android:id="@+id/result_place_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/result_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_general_info"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:background="@drawable/result_palces_border">
        <RelativeLayout
            android:id="@+id/results_review_see_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <TextView
                android:id="@+id/results_review_view_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your review"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/result_review_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/results_edit_review_link1"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_toRightOf="@+id/results_review_view_header" />
            <EditText
                android:id="@+id/result_display_my_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/results_review_view_header"
                android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
                android:enabled="false"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:maxLines="5"
                android:maxLength="500"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/result_is_blacklisted_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blacklist?"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/result_is_blacklisted_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/result_is_blacklisted_text"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/result_save"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Update"
                android:layout_toLeftOf="@+id/result_remove"/>
            <Button
                android:id="@+id/result_remove"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Didn't go"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>